{% extends 'base.html.twig' %}

{% block title %}Hello MaisonHoteController!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col">
				{% for image in maison.images %}
					<img class="card-img-top" src="{{asset('/images_maisons/' ~ image.name)}}" alt="Card image cap" height="100" width="30px">
				{% endfor %}
				<h1>
					{{maison.localisation}}
				</h1>
				<p>{{maison.description}}</p>
				<a href="{{ path('maison_hote_delete', {'id': maison.id}) }}" class="btn btn-light">delete</a>
				<a href="{{ path('edit_maison_hote', {'id': maison.id}) }}" class="btn btn-light">Edit</a>
			</div>
		</div>
	</div>

{% endblock %}
