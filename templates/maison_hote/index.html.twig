{% extends 'base.html.twig' %}

{% block title %}Hello MaisonHoteController!
{% endblock %}

{% block body %}


	{% if maisons %}
		<div class="container">

			<div class="row">
				{% for maison in maisons %}
					<div class="col-md-4">
						<div class="card" style="width: 18rem;">
							{% for image in maison.images %}
								<img class="card-img-top" src="{{asset('/images_maisons/' ~ image.name)}}" alt="Card image cap" height="250" width="100">
							{% endfor %}
							<div class="card-body">
								<h5 class="card-title">{{maison.nom }}</h5>
								<h5 class="card-title">{{maison.Localisation}}</h5>
								<h5 class="card-title">{{maison.type}}</h5>

								<p class="card-text">{{maison.description}}</p>
								<a href="/maison_hote/{{maison.id}}" class="btn btn-primary">show</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>


		</div>


	{% else %}
		<p>no maisons to display</p>
	{% endif %}
{% endblock %}
