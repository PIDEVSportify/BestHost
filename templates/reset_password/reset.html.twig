{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container" >
        <div class="row  justify-content-center">
            <h1>Reset your password</h1>
        </div>

            <div class="row justify-content-center" style="margin-top: 3em;">

                {{ form_start(resetForm) }}
                <div class="col-md-12 form-group p_star" >
                    {{ form_errors(resetForm.password) }}
                    {{ form_widget(resetForm.password,{'attr':{'class':'form-control','placeholder':'Password'}}) }}
                </div>
                <div class="col-md-12 form-group p_star" >
                    {{ form_errors(resetForm.confirm_password) }}
                    {{ form_widget(resetForm.confirm_password,{'attr':{'class':'form-control','placeholder':'Confirm password'}}) }}
                </div>
                <div class="col-md-12 form-group p_star" style="text-align: center">
                <button class="btn btn-primary">Reset password</button>
                </div>
                {{ form_end(resetForm) }}
            </div>



    </div>


{% endblock %}
