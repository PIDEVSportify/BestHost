{#  {{ form(form) }}#}
{% extends 'back.html.twig' %}
   {% block title%} BestHost  | Ajout Gérant  {% endblock title %}
{% block body %}
    <main>
        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Ajout Gérant</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End-->
        <!--================login_part Area =================-->
        <section class="login_part section_padding ">
            <div class="container">
                <div class="row align-items-center">


                    <div class="login_part_form" style="margin-left:25%;margin-right:25%">
                        <div class="login_part_form_iner">
                            {{ form_start(form) }}
                            <div class="col-md-12 form-group p_star ">
                                {{ form_errors(form.Id_gerant) }}
                                {{form_widget(form.Id_gerant,{ 'attr':{'placeholder':'Identifiant', 'class':'form-control' }}) }}
                            </div>
                            <div class="col-md-12 form-group p_star ">
                                {{ form_errors(form.Nom) }}
                                {{form_widget(form.Nom,{ 'attr':{'placeholder':'Nom', 'class':'form-control' }}) }}
                            </div>
                            <div class="col-md-12 form-group p_star" >
                                {{ form_errors(form.Prenom) }}
                                {{form_widget(form.Prenom,{ 'attr':{'placeholder':'Prenom', 'class':'form-control' }})}}
                            </div>
                            <div class="col-md-12 form-group p_star ">
                                {{ form_errors(form.Ad_Email) }}
                                {{form_widget(form.Ad_Email,{ 'attr':{'placeholder':'Email', 'class':'form-control' }}) }}
                            </div>
                            <div class="col-md-12 form-group p_star" >
                                {{ form_label(form.Date_nais,"Date de naissance") }}
                                {{ form_errors(form.Date_nais) }}
                                {{form_widget(form.Date_nais,{ 'attr':{'placeholder':'Date de naissance', 'class':'Datetype' }})}}
                            </div>
                            <div class="col-md-12 form-group p_star" >
                                {{ form_errors(form.Cin) }}
                                {{form_widget(form.Cin,{ 'attr':{'placeholder':'CIN', 'class':'form-control' }})}}
                            </div>



                            <div class="row justify-content-center">
                                {{ form_end(form) }}
                            </div>

                        </div>

                    </div>
                </div>
            </div></section>
        <!--================login_part end =================-->
    </main>

    <!--? Search model Begin -->
    <div class="search-model-box">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-btn">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Searching key.....">
            </form>
        </div>
    </div>
{{ form_end(form) }}
{% endblock %}