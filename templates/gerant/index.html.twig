{% extends 'base.html.twig' %}

{% block title %}Gerant index{% endblock %}

{% block content %}
    <h1>Gerant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_gerant</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date_nais</th>
                <th>Ad_Email</th>
                <th>Cin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gerant in gerants %}
            <tr>
                <td>{{ gerant.IdGerant }}</td>
                <td>{{ gerant.Nom }}</td>
                <td>{{ gerant.Prenom }}</td>
                <td>{{ gerant.DateNais ? gerant.DateNais|date('Y-m-d') : '' }}</td>
                <td>{{ gerant.AdEmail }}</td>
                <td>{{ gerant.Cin }}</td>
                <td>
                    <a href="{{ path('gerant_show', {'Id_gerant': gerant.Idgerant}) }}" class="btn btn-light">show</a>
                    <a href="{{ path('gerant_edit', {'Id_gerant': gerant.Idgerant}) }}" class="btn btn-light">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gerant_new') }}">Create new</a>
{% endblock %}
