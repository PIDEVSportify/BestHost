{% extends 'base.html.twig' %}

{% block title %}Modifier{% endblock %}
{% block body %}
<h1 style="text-align: center">Modifier Offre</h1>
    <div class="container" style="margin-top: 20px">
<form name="F1" method="POST" action="{{ path('Modifier_offre')}}" id="formu2" onsubmit="return compare()" >
    <label>Id:</label>
    <input id="in5" hidden type="number" name="save" style="margin-left: 80px;" value="{{ request.request.get('id') }}">
    <input id="in1" type="number" name="Id" style="margin-left: 160px;" value="{{ request.request.get('id') }}" >
    <br>
    <br>
    <label>Nombre des palces:</label>
    <input id="in2" type="number" name="Nombre" style="margin-left: 36px; " value="{{ request.request.get('nombre')}}" min="4" max="10">
    <br>
    <br>
    <label>Date debut:</label>
    <input id="in3" type="date" name="debut" style="
        margin-left: 97px;
    " value="{{ request.request.get('date_debut') |date("Y-m-d")}}">
    <br>
    <br>
    <label>Date fin:</label>
    <input id="in4" type="date" name="fin" style="
        margin-left: 121px;
    " value="{{ request.request.get('date_fin') |date("Y-m-d")}}">
    <br>
    <br>
    <button id="in6" type="submit" class="btn btn-success" style="margin-left: 290px;margin-top: 20px;"><i class="ti-save"></i> Enregistrer</button>
</form>
    <form  action="{{ path('Afficher_offre')}}" method="post"  >
        <button type="submit" class="btn btn-secondary" data-dismiss="modal" style="margin-top: -85px;MARGIN-LEFT: 11%;">Fermer</button>
    </form>
    </div>
    <script>
        function compare() {
            if(document.getElementById('in3').value > document.getElementById('in4').value) {
                alert("date debut is greater than date fin")
                return false;
            }
            return true;
        }

    </script>
{% endblock %}