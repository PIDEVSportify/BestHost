{% extends 'layouts/full-width.html.twig' %}

{% block title %}Forums{% endblock %}

{% block content %}
    {% do append_breadcrumb(path('admin.homepage'), 'Admin') %}
    {% do set_active_label('Forums') %}

    {{ include('partials/_breadcrumb.html.twig') }}

    <h1>
        <span>Forums</span>
        <button class="pull-right btn btn-primary btn-sm disabled" title="Ajouter">
            <i class="fas fa-plus"></i>
        </button>
    </h1>

    <div class="mt-3">
        <table class="table table-sm">
            <thead>
            <tr class="d-flex">
                <th class="col-2">Position</th>
                <th class="col-5">Titre</th>
                <th class="col-3">Cat√©gorie</th>
                <th class="col-2">Actions</th>
            </tr>
            </thead>
            <tbody class="thead-light">
                {% for forum in forums %}
                    <tr class="d-flex">
                        <td class="col-2">{{ forum.position }}</td>
                        <td class="col-5">{{ forum.title }}</td>
                        <td class="col-3">{{ forum.category.title }}</td>
                        <td class="col-3">
                            <a class="btn btn-primary btn-sm disabled" href="#" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            -
                            <button class="btn btn-danger btn-sm disabled" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
