{% extends 'base.html.twig' %}


   {% block title%} BestHost  | Inscription  {% endblock title %}




{% block body  %}



    <main>
        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Inscription</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End-->
        <!--================login_part Area =================-->
        <section class="login_part section_padding ">
            <div class="container">
                <div class="row align-items-center">


                    <div class="login_part_form" style="margin-left:20%;margin-right:20%">
                        <div class="login_part_form_iner">
                            <h3>
                                S'inscrire maintenant</h3>
                            {{ form_start(form) }}
                            <div class="col-md-12 form-group p_star ">
                                {{ form_errors(form.first_name) }}
                                {{form_widget(form.first_name,{ 'attr':{'placeholder':'First Name', 'class':'form-control' }}) }}
                            </div>
                            <div class="col-md-12 form-group p_star ">
                                {{ form_errors(form.last_name) }}
                                {{form_widget(form.last_name,{ 'attr':{'placeholder':'Last Name', 'class':'form-control' }}) }}
                            </div>
                            <div class="col-md-12 form-group p_star" >
                                {{ form_errors(form.cin) }}
                                {{form_widget(form.cin,{ 'attr':{'placeholder':'Cin', 'class':'form-control' }})}}
                            </div>
                            <div class="col-md-12 form-group p_star ">
                                {{ form_errors(form.email) }}
                                {{form_widget(form.email,{ 'attr':{'placeholder':'Email', 'class':'form-control' }}) }}
                            </div>
                            <div class="col-md-12 form-group p_star" >
                                {{ form_errors(form.password) }}
                                {{form_widget(form.password,{ 'attr':{'placeholder':'Password', 'class':'form-control' }})}}
                            </div>
                            <div class="col-md-12 form-group p_star" >
                                {{ form_errors(form.confirm_password,{'attr':{'class':'alert'}}) }}
                                {{form_widget(form.confirm_password,{ 'attr':{'placeholder':'Confirm Password', 'class':'form-control' }})}}
                            </div>
                            <div class="col-md-12 form-group  p_star" >
                                <div class="custom-file">
                                    {{ form_errors(form.roles) }}
                                    {{form_widget(form.roles)}}
                                </div>
                            </div>
                            <div class="col-md-12 form-group  p_star" >
                                <div class="row justify-content-center">
                                    <div class="col">
                                        <input type="file" class="filepond"
                                               data-allow-reorder="true"
                                               data-max-file-size="1G"
                                               data-max-files="1"
                                               name="avatar">
                                    </div>

                                </div>
                            </div>
                            <div class="row justify-content-center">
                                {{ form_end(form) }}
                            </div>

                        </div>

                    </div>
                </div>
        </section>
        <!--================login_part end =================-->
    </main>

    <!--? Search model Begin -->
    <div class="search-model-box">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-btn">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Searching key.....">
            </form>
        </div>
    </div>

{% endblock body  %}




