{% extends 'layouts/full-width.html.twig' %}

{% block title %}Liste des membres{% endblock %}

{% block content %}
    <h1>Liste des membres</h1>

    <div class="mt-3">
        <table class="table table-sm">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Nombre de messages</th>
                <th>Inscription</th>
                <th>Dernière activité</th>
            </tr>
            </thead>
            <tbody>
            {% for member in pagination %}
                <tr>
                    <td>{{ member.FirstName ~ "  " ~ member.author.LastName}}</td>
               
                    <td>{{ member.createdAt|format_datetime('medium', 'none') }}</td>
                    <td>{{ member.lastActivityAt ? member.lastActivityAt|ago : 'Jamais' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
